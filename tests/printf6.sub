# test %ls and %lc with multibyte characters

V=ಇಳಿಕೆಗಳು
V2=${V:0:2}
V3=${V:0:1}

printf "%ls\n" "$V"
printf "%ls\n" "$V2"
printf "%lc\n" "$V"
printf "%.2ls\n" "$V"

printf "%4.2ls\n" "$V"
printf "%-4.2ls---\n" "$V"

printf "%ls\n" "$V3"
printf "%S\n" "$V3"
printf "%lc\n" "$V3"
printf "%C\n" "$V3"

printf "%4.2lc\n" "$V3"
printf "%-4.2lc---\n" "$V3"
